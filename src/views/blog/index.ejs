<!DOCTYPE html>
<html lang="<%= locals.language || 'zh-CN' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= metaTitle %></title>
  <meta name="description" content="<%= metaDescription %>">
  <link rel="canonical" href="<%= canonicalUrl %>">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <meta name="robots" content="index, follow">
  <!-- 引入搜索引擎所需的结构化数据 -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Blog",
      "name": "<%= title %>",
      "description": "<%= description %>",
      "url": "<%= canonicalUrl %>"
    }
  </script>
  <style>
    .navbar {
      background-color: #343a40;
      padding: 0.5rem 1rem;
    }
    .navbar-brand {
      color: white;
      font-weight: bold;
    }
    .navbar-nav .nav-link {
      color: rgba(255,255,255,0.8);
    }
    .navbar-nav .nav-link:hover {
      color: white;
    }
    .user-avatar {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background-color: #6c757d;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 10px;
      font-size: 14px;
      color: white;
      overflow: hidden;
    }
    .user-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .dropdown-menu {
      min-width: 200px;
      padding: 10px;
    }
    .user-info {
      padding: 10px;
      border-bottom: 1px solid #eee;
      margin-bottom: 10px;
    }
    .user-name {
      font-weight: bold;
      margin-bottom: 0;
    }
    .user-email {
      font-size: 0.8rem;
      opacity: 0.8;
      margin-bottom: 0;
    }
  </style>
</head>
<body>
  <!-- 导航栏 -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/blog"><%= title %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/blog">首页</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blog/categories">分类</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blog/about">关于</a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if (locals.user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <% if (locals.user.profilePicture) { %>
                  <img src="<%= locals.user.profilePicture %>" alt="<%= locals.user.username %>" class="user-avatar">
                <% } else { %>
                  <div class="user-avatar">
                    <%= locals.user.username.charAt(0).toUpperCase() %>
                  </div>
                <% } %>
                <%= locals.user.displayName || locals.user.username %>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                  <div class="user-info">
                    <p class="user-name"><%= locals.user.displayName || locals.user.username %></p>
                    <p class="user-email"><%= locals.user.email %></p>
                  </div>
                </li>
                <li><a class="dropdown-item" href="/admin"><i class="bi bi-speedometer2"></i> 管理后台</a></li>
                <li><a class="dropdown-item" href="/auth/profile"><i class="bi bi-person"></i> 个人资料</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right"></i> 退出登录</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login"><i class="bi bi-box-arrow-in-right"></i> 登录</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <header class="blog-header">
    <div class="container">
      <h1 class="blog-title"><%= title %></h1>
      <p class="blog-description"><%= description %></p>
    </div>
  </header>

  <main class="container">
    <div class="posts-list">
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <article class="post-card">
            <h2 class="post-title">
              <a href="<%= `/blog/${post.slug}` %>"><%= post.title %></a>
            </h2>
            <div class="post-meta">
              <span class="post-date"><%= new Date(post.publishedAt).toLocaleDateString('zh-CN') %></span>
              <span class="post-reading-time"><%= post.readingTime %> 分钟阅读</span>
            </div>
            <div class="post-excerpt">
              <p><%= post.excerpt %></p>
            </div>
            <div class="post-categories">
              <% if (post.categories && post.categories.length > 0) { %>
                <% post.categories.forEach(category => { %>
                  <a href="<%= `/blog/category/${category}` %>" class="category-badge"><%= category %></a>
                <% }) %>
              <% } %>
            </div>
            <a href="<%= `/blog/${post.slug}` %>" class="read-more">阅读全文 →</a>
          </article>
        <% }) %>
      <% } else { %>
        <div class="no-posts">
          <p>暂无文章</p>
        </div>
      <% } %>
    </div>

    <% if (locals.pagination && pagination.totalPages > 1) { %>
      <div class="pagination">
        <% if (pagination.hasPrevPage) { %>
          <a href="<%= `/blog?page=${pagination.page - 1}` %>" class="pagination-prev">上一页</a>
        <% } %>

        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
          <% if (i === pagination.page) { %>
            <span class="pagination-active"><%= i %></span>
          <% } else { %>
            <a href="<%= `/blog?page=${i}` %>" class="pagination-link"><%= i %></a>
          <% } %>
        <% } %>

        <% if (pagination.hasNextPage) { %>
          <a href="<%= `/blog?page=${pagination.page + 1}` %>" class="pagination-next">下一页</a>
        <% } %>
      </div>
    <% } %>
  </main>

  <footer class="blog-footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> <%= title %>. All rights reserved.</p>
      <p>
        <a href="/feed.xml">RSS订阅</a> |
        <a href="/sitemap.xml">站点地图</a>
      </p>
    </div>
  </footer>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 