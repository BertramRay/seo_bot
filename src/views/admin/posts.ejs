<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SEO博客 - 文章管理</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background-color: #f5f5f5;
    }
    .sidebar {
      background-color: #343a40;
      min-height: 100vh;
      color: white;
    }
    .sidebar a {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      padding: 10px 15px;
      display: block;
    }
    .sidebar a:hover {
      color: white;
      background-color: rgba(255, 255, 255, 0.1);
    }
    .sidebar .active {
      background-color: rgba(255, 255, 255, 0.2);
      color: white;
    }
    .content {
      padding: 20px;
    }
    .table td {
      vertical-align: middle;
    }
    .badge-published {
      background-color: #28a745;
    }
    .badge-draft {
      background-color: #ffc107;
    }
    .badge-deleted {
      background-color: #dc3545;
    }
    .title-cell {
      max-width: 300px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- 侧边栏 -->
      <div class="col-md-2 sidebar p-0">
        <div class="py-4 px-3 mb-4">
          <h5>SEO博客管理</h5>
        </div>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="/admin">仪表盘</a>
          </li>
          <li class="nav-item">
            <a href="/admin/topics">主题管理</a>
          </li>
          <li class="nav-item">
            <a href="/admin/posts" class="active">文章管理</a>
          </li>
          <li class="nav-item">
            <a href="/admin/generate">生成内容</a>
          </li>
          <li class="nav-item">
            <a href="/admin/settings">系统设置</a>
          </li>
        </ul>
      </div>
      
      <!-- 主内容区 -->
      <div class="col-md-10 content">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>文章管理</h2>
          <a href="/admin/generate" class="btn btn-primary">
            生成新文章
          </a>
        </div>
        
        <!-- 筛选器 -->
        <div class="card mb-4">
          <div class="card-body">
            <form action="/admin/posts" method="GET" class="row g-3">
              <div class="col-md-4">
                <label for="status" class="form-label">状态筛选</label>
                <select class="form-select" id="status" name="status" onchange="this.form.submit()">
                  <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>所有状态</option>
                  <option value="published" <%= currentStatus === 'published' ? 'selected' : '' %>>已发布</option>
                  <option value="draft" <%= currentStatus === 'draft' ? 'selected' : '' %>>草稿</option>
                  <option value="deleted" <%= currentStatus === 'deleted' ? 'selected' : '' %>>已删除</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="limit" class="form-label">每页显示</label>
                <select class="form-select" id="limit" name="limit" onchange="this.form.submit()">
                  <option value="10" <%= pagination.limit === 10 ? 'selected' : '' %>>10</option>
                  <option value="20" <%= pagination.limit === 20 ? 'selected' : '' %>>20</option>
                  <option value="50" <%= pagination.limit === 50 ? 'selected' : '' %>>50</option>
                  <option value="100" <%= pagination.limit === 100 ? 'selected' : '' %>>100</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="search" class="form-label">搜索文章</label>
                <input type="text" class="form-control" id="search" name="search" placeholder="输入标题或关键词">
              </div>
            </form>
          </div>
        </div>
        
        <!-- 文章列表 -->
        <div class="card">
          <div class="card-body">
            <% if (posts && posts.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>标题</th>
                      <th>创建日期</th>
                      <th>主题</th>
                      <th>关键词</th>
                      <th>状态</th>
                      <th>操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% posts.forEach(post => { %>
                      <tr>
                        <td class="title-cell"><%= post.title %></td>
                        <td><%= new Date(post.createdAt).toLocaleString('zh-CN') %></td>
                        <td><%= post.topic ? post.topic.name : '未分类' %></td>
                        <td>
                          <% if (post.keywords && post.keywords.length > 0) { %>
                            <% post.keywords.slice(0, 2).forEach(keyword => { %>
                              <span class="badge bg-secondary me-1"><%= keyword %></span>
                            <% }) %>
                            <% if (post.keywords.length > 2) { %>
                              <span class="badge bg-light text-dark">+<%= post.keywords.length - 2 %></span>
                            <% } %>
                          <% } else { %>
                            <span class="text-muted">无关键词</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (post.status === 'published') { %>
                            <span class="badge badge-published">已发布</span>
                          <% } else if (post.status === 'draft') { %>
                            <span class="badge badge-draft">草稿</span>
                          <% } else if (post.status === 'deleted') { %>
                            <span class="badge badge-deleted">已删除</span>
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group">
                            <a href="/blog/<%= post.slug %>" target="_blank" class="btn btn-sm btn-outline-primary">查看</a>
                            <a href="/admin/posts/edit/<%= post._id %>" class="btn btn-sm btn-outline-secondary">编辑</a>
                            <% if (post.status !== 'published') { %>
                              <button class="btn btn-sm btn-outline-success" onclick="publishPost('<%= post._id %>')">发布</button>
                            <% } else { %>
                              <button class="btn btn-sm btn-outline-warning" onclick="unpublishPost('<%= post._id %>')">取消发布</button>
                            <% } %>
                            <button class="btn btn-sm btn-outline-danger" onclick="deletePost('<%= post._id %>')">删除</button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              
              <!-- 分页 -->
              <% if (pagination.totalPages > 1) { %>
                <nav aria-label="Page navigation">
                  <ul class="pagination justify-content-center">
                    <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                      <a class="page-link" href="/admin/posts?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>&status=<%= currentStatus %>" tabindex="-1">上一页</a>
                    </li>
                    
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                      <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                        <a class="page-link" href="/admin/posts?page=<%= i %>&limit=<%= pagination.limit %>&status=<%= currentStatus %>"><%= i %></a>
                      </li>
                    <% } %>
                    
                    <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                      <a class="page-link" href="/admin/posts?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>&status=<%= currentStatus %>">下一页</a>
                    </li>
                  </ul>
                </nav>
              <% } %>
            <% } else { %>
              <div class="alert alert-info">
                暂无文章，请生成或创建新文章
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function publishPost(postId) {
      if (confirm('确定要发布此文章吗？')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/posts/publish/' + postId;
        document.body.appendChild(form);
        form.submit();
      }
    }
    
    function unpublishPost(postId) {
      if (confirm('确定要取消发布此文章吗？')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/posts/unpublish/' + postId;
        document.body.appendChild(form);
        form.submit();
      }
    }
    
    function deletePost(postId) {
      if (confirm('确定要删除此文章吗？此操作不可撤销！')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/posts/delete/' + postId;
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
</body>
</html> 