<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SEO博客 - 管理后台</title>
  <%- include('../partials/styles') %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar', { currentPage: 'dashboard' }) %>
      
      <!-- 主内容区 -->
      <div class="col-md-10 content">
        <h2 class="mb-4">仪表盘</h2>
        
        <!-- 统计卡片 -->
        <div class="row">
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">总文章数</h5>
                <p class="card-text fs-2"><%= typeof stats !== 'undefined' && stats?.totalPosts ? stats.totalPosts : 0 %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">活跃主题</h5>
                <p class="card-text fs-2"><%= typeof stats !== 'undefined' && stats?.activeTopics ? stats.activeTopics : 0 %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">本月发布</h5>
                <p class="card-text fs-2"><%= typeof stats !== 'undefined' && stats?.postsThisMonth ? stats.postsThisMonth : 0 %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card stats-card">
              <div class="card-body">
                <h5 class="card-title">下次生成</h5>
                <p class="card-text"><%= typeof stats !== 'undefined' && stats?.nextGeneration ? stats.nextGeneration : '未设置' %></p>
                <% if (typeof stats !== 'undefined' && stats?.nextGeneration && stats.nextGeneration.includes('(')) { %>
                  <small class="text-muted">
                    <i class="bi bi-info-circle"></i> Cron表达式格式: 分 时 日 月 星期<br>
                    例如: "0 3 * * *" 表示每天凌晨3点
                  </small>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- 快捷操作 -->
        <div class="row mt-4">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                快捷操作
              </div>
              <div class="card-body">
                <div class="d-grid gap-2">
                  <a href="/admin/generate" class="btn btn-primary">生成新文章</a>
                  <a href="/admin/topics/new" class="btn btn-outline-secondary">添加新主题</a>
                  <a href="/admin/sitemap/generate" class="btn btn-outline-secondary">更新站点地图</a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- 最近文章 -->
          <div class="col-md-6">
            <div class="card">
              <div class="card-header">
                最近发布的文章
              </div>
              <ul class="list-group list-group-flush">
                <% if (typeof recentPosts !== 'undefined' && recentPosts && recentPosts.length > 0) { %>
                  <% recentPosts.forEach(post => { %>
                    <li class="list-group-item">
                      <a href="<%= post.url %>" target="_blank"><%= post.title %></a>
                      <small class="text-muted d-block"><%= post.publishDate %></small>
                    </li>
                  <% }) %>
                <% } else { %>
                  <li class="list-group-item">暂无文章</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/scripts') %>
</body>
</html> 